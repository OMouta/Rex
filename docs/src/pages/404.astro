---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import { DOCS_LINKS } from '../utils/docs-links';
---

<Layout 
  title="Page Not Found | Rex Documentation"
  description="The page you're looking for doesn't exist. Find what you need in the Rex documentation."
>
  <div class="min-h-screen bg-zinc-950 flex flex-col">
    <Header />
      <main class="flex-1 flex items-center justify-center px-4 sm:px-6 lg:px-8 py-16 sm:py-20">
      <div class="max-w-2xl mx-auto text-center">
        <!-- 404 Illustration -->
        <div class="mb-12 float">
          <div class="flex items-center justify-center space-x-2 select-none">
            <!-- First 4 -->
            <span class="text-8xl sm:text-9xl font-black text-white">4</span>
            <!-- Rex Logo as the "0" -->
            <span class="inline-flex items-center justify-center">
              <img 
            src="/RexLogo.webp" 
            alt="Rex Logo" 
            class="w-20 h-20 sm:w-28 sm:h-28"
            style="display: inline-block;"
              />
            </span>
            <!-- Second 4 -->
            <span class="text-8xl sm:text-9xl font-black text-white">4</span>
          </div>
        </div>
        
        <!-- Error Message -->
        <div class="mb-8">
          <h2 class="text-2xl sm:text-3xl font-bold text-zinc-200 mb-4">
            Page Not Found
          </h2>
          <p class="text-lg text-zinc-400 leading-relaxed mb-6">
            Oops! The page you're looking for doesn't exist. It might have been moved, deleted, or you entered the wrong URL.
          </p>
        </div>
          <!-- Action Buttons -->
        <div class="flex flex-col sm:flex-row gap-4 justify-center mb-12">
          <a
            href={DOCS_LINKS.introduction}
            class="inline-flex items-center px-6 py-3 bg-primary-500 text-white font-semibold rounded-lg hover:bg-primary-600 transition-colors border border-primary-600"
          >
            <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.746 0 3.332.477 4.5 1.253v13C19.832 18.477 18.246 18 16.5 18c-1.746 0-3.332.477-4.5 1.253" />
            </svg>
            Browse Documentation
          </a>
          <a
            href="/"
            class="inline-flex items-center px-6 py-3 bg-zinc-800 text-white font-semibold rounded-lg hover:bg-zinc-700 transition-colors border border-zinc-600"
          >
            <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6" />
            </svg>
            Go Home
          </a>
        </div>
          <!-- Popular Links -->
        <div class="bg-zinc-900 rounded-xl border border-zinc-800 p-6 mb-16">
          <h3 class="text-lg font-semibold text-zinc-200 mb-4">
            Popular Documentation Pages
          </h3>          <div class="grid sm:grid-cols-2 gap-3">
            <a
              href={DOCS_LINKS.introduction}
              class="text-zinc-400 hover:text-primary-400 transition-colors text-sm flex items-center"
            >
              <svg class="w-4 h-4 mr-2 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
              </svg>
              Introduction
            </a>
            <a
              href={DOCS_LINKS.quickStart}
              class="text-zinc-400 hover:text-primary-400 transition-colors text-sm flex items-center"
            >
              <svg class="w-4 h-4 mr-2 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
              </svg>
              Quick Start Guide
            </a>
            <a
              href={DOCS_LINKS.yourFirstComponent}
              class="text-zinc-400 hover:text-primary-400 transition-colors text-sm flex items-center"
            >
              <svg class="w-4 h-4 mr-2 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
              </svg>
              Your First Component
            </a>
            <a
              href={DOCS_LINKS.stateManagement}
              class="text-zinc-400 hover:text-primary-400 transition-colors text-sm flex items-center"
            >
              <svg class="w-4 h-4 mr-2 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
              </svg>
              State Management Basics
            </a>
            <a
              href={DOCS_LINKS.apiReference.state}
              class="text-zinc-400 hover:text-primary-400 transition-colors text-sm flex items-center"
            >
              <svg class="w-4 h-4 mr-2 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
              </svg>
              State API Reference
            </a>
            <a
              href={DOCS_LINKS.examples.simpleCounter}
              class="text-zinc-400 hover:text-primary-400 transition-colors text-sm flex items-center"
            >
              <svg class="w-4 h-4 mr-2 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
              </svg>
              Simple Counter Example
            </a>
          </div>
        </div>
      </div>
    </main>
    
    <Footer />
  </div>
</Layout>

<style>
  /* Add some animation to the 404 text */
  @keyframes float {
    0%, 100% { transform: translateY(0px); }
    50% { transform: translateY(-10px); }
  }
  
  .float {
    animation: float 3s ease-in-out infinite;
  }
</style>
